<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="437.0" prefWidth="564.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConclusionController">
   <children>
      <Label fx:id="statsLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="201.0" prefHeight="36.0" prefWidth="564.0" text="m" textAlignment="CENTER">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </Label>
      <Button fx:id="tryAgainButton" layoutX="14.0" layoutY="314.0" mnemonicParsing="false" onAction="#reStartGame">
         <graphic>
            <ImageView fitHeight="113.0" fitWidth="163.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/try_again_button.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="continueButton" layoutX="381.0" layoutY="314.0" mnemonicParsing="false" onAction="#shutDownGame">
         <graphic>
            <ImageView fitHeight="114.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/continue_button.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ImageView fitHeight="214.0" fitWidth="305.0" layoutX="131.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Assets/sucessBook.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
